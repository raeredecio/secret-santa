<h3 class="headline m-top-md">
  Start Secret Santa
  <span class="line"></span>
</h3>

<div class="row">
  <div class="col-md-12">
    <div class="flash_div">
      <%= render 'flash_messages', flash: flash %>
    </div>
<%= form_tag assign_santas_users_path, method: :post, class: "form-horizontal" do %>

    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>Ready? <i class="fa fa-gift"></i></strong>
      </div>
      <div class="panel-body">	
	    <div class="form-group">
		  
		  <div class="col-lg-5">
		  Playing with <%= pluralize(User.active.count, 'participants')%>!<br><br>
		   Constraints: <br>
		   -You can't be your own Santa. <br>
		   -You can't be assigned the same Santa from last time.<br>
		   -You can't be your partner's Santa.
		  </div>
		</div>
	

		<div class="form-group">
	     
	      <div class="col-lg-3">
	        <%= button_tag type: "submit", :class => 'btn btn-info btn-fill' do %>
	            Start!
	        <% end %>
	      </div>
	    </div> 
      </div>
  	</div>

  <% end %>
  </div>
</div>