<h3 class="headline m-top-md">
  Participant
  <span class="line"></span>
</h3>
<div class="row">
  <div class="col-md-12">
    <div class="flash_div">
      <%= render 'flash_messages', flash: flash %>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>General Details</strong>
      </div>
      <div class="panel-body">
        <fieldset class="form-horizontal form-border">
          <div class="form-group">
            <label class="col-lg-3 control-label">Name</label>
            <div class="col-lg-9">
              <p class="form-control-static"><%= @user.name %></p>
            </div><!-- /.col -->
          </div><!-- /form-group -->

          <div class="form-group">
            <label class="col-lg-3 control-label">Partner Name</label>
            <div class="col-lg-9">
              <p class="form-control-static"><%= @user.partner_name %></p>
            </div><!-- /.col -->
          </div><!-- /form-group -->

          <div class="form-group">
            <label class="col-lg-3 control-label">Previous Giftee</label>
            <div class="col-lg-9">
              <p class="form-control-static"><%= @user.previous_giftee %></p>
            </div><!-- /.col -->
          </div><!-- /form-group -->

          <div class="form-group">
            <label class="col-lg-3 control-label">Current Giftee</label>
            <div class="col-lg-3">
              <p class="form-control-static spoiler"><%= @user.current_giftee %></p>
            </div><!-- /.col -->
            <div class="col-lg-3 no-left-pad">
              <p class="form-control-static help-text">(Hover to see)</p>
            </div><!-- /.col -->
          </div><!-- /form-group -->

          <div class="form-group">
            <label class="col-lg-3 control-label">Participating?</label>
            <div class="col-lg-9">
              <p class="form-control-static"><%= @user.active? ? "Yes" : "No" %></p>
            </div><!-- /.col -->
          </div><!-- /form-group -->
        </fieldset>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="padding-md">
        <%= link_to users_path, class: "btn btn-fill btn-default" do %>
          <i class="fa fa-list"></i> Back to Participants List
        <% end %>
        <div class="pull-right">
          <%= link_to edit_user_path(@user), class: "btn btn-fill btn-default" do %>
            <i class="fa fa-edit"></i> Edit
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>